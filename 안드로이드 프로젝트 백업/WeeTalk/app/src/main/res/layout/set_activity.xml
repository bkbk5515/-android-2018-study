<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#32c5f9"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/list_btn1"
                android:layout_width="61dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/friend"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp" />

            <ImageView
                android:id="@+id/chatlist_btn"
                android:layout_width="61dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/chat"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/map_btn"
                android:layout_toStartOf="@+id/map_btn"
                android:layout_marginRight="35dp"
                android:layout_marginEnd="35dp" />

            <ImageView
                android:id="@+id/map_btn"
                android:layout_width="61dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/map"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/set_btn"
                android:layout_toStartOf="@+id/set_btn"
                android:layout_marginRight="36dp"
                android:layout_marginEnd="36dp" />

            <ImageView
                android:id="@+id/set_btn"
                android:layout_width="61dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/set"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:textColor="#4a4a4a"
                    android:text="프로필 사진"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:gravity="center_horizontal" />

                <ImageView
                    android:id="@+id/imageView_photo"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="16dp"
                    app:srcCompat="@android:drawable/sym_def_app_icon"
                    android:textColor="#b3000000"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/textview3"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사진을 클릭하면 프로필 변경이 가능합니다."

                    android:layout_alignBottom="@+id/imageView_photo"
                    android:textColor="#ffffff"
                    android:background="#b3000000"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:drawableStart="@drawable/ball"
                    android:drawableLeft="@drawable/ball"
                    android:layout_gravity="center"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginBottom="125dp"
        android:gravity="center_vertical"
        android:text="대화명 : "
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="상태메세지 : "
        android:textSize="15dp"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_below="@+id/editText"
        android:layout_toLeftOf="@+id/editText3"
        android:layout_toStartOf="@+id/editText3" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="bkbk5515"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="happy new year~!"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

</RelativeLayout>