<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/Rel"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/savebutton"
        android:layout_alignBottom="@+id/savebutton"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:text="새 연락처"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="10pt" />

    <Button
        android:id="@+id/savebutton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="저장" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:layout_below="@+id/savebutton"
        android:layout_centerHorizontal="true"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <EditText
        android:id="@+id/name1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="이름"
        android:inputType="text"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/call"
        android:layout_alignEnd="@+id/call"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <EditText
        android:id="@+id/number1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name1"
        android:layout_alignStart="@+id/name1"
        android:layout_below="@+id/name1"
        android:ems="10"
        android:hint="대표 전화번호"
        android:inputType="phone"
        android:layout_alignRight="@+id/name1"
        android:layout_alignEnd="@+id/name1" />

    <EditText
        android:id="@+id/number2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/number1"
        android:layout_alignStart="@+id/number1"
        android:layout_below="@+id/number1"
        android:ems="10"
        android:hint="전화번호"
        android:inputType="phone"
        android:layout_alignRight="@+id/number1"
        android:layout_alignEnd="@+id/number1" />

    <EditText
        android:id="@+id/mail1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/number2"
        android:layout_alignStart="@+id/number2"
        android:layout_below="@+id/number2"
        android:ems="10"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:layout_alignRight="@+id/number2"
        android:layout_alignEnd="@+id/number2" />

    <EditText
        android:id="@+id/memo1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mail1"
        android:layout_alignStart="@+id/mail1"
        android:layout_below="@+id/mail1"
        android:ems="10"
        android:hint="메모"
        android:inputType="text"
        android:layout_alignRight="@+id/mail1"
        android:layout_alignEnd="@+id/mail1" />

    <Button
        android:id="@+id/delbutton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="사진선택" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/number2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name1"
        android:gravity="center_vertical"
        android:text="번호1 :"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="10pt" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/name1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/name1"
        android:gravity="center_vertical"
        android:text="이름  :"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="10pt" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/memo1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mail1"
        android:gravity="center_vertical"
        android:text="메모 :"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="10pt" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/memo1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/number2"
        android:gravity="center_vertical"
        android:text="메일 :"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="10pt" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mail1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/number1"
        android:gravity="center_vertical"
        android:text="번호2 :"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="10pt" />


</RelativeLayout>