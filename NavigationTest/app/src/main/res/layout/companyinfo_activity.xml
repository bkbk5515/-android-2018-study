<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="56dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:id="@+id/relative" >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.Dark" />

        </RelativeLayout>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relative">

            <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/constraint1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".CompanyInfoActivity"
                tools:layout_editor_absoluteY="25dp">

                <android.support.constraint.Guideline
                    android:id="@+id/fcompanyinfo_guideline05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />

                <android.support.constraint.Guideline
                    android:id="@+id/fcompanyinfo_guideline90"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />

                <ImageView
                    android:id="@+id/imageview01"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/info1"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="@+id/fcompanyinfo_guideline05"
                    app:layout_constraintRight_toRightOf="@+id/fcompanyinfo_guideline90"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageview01"
                    android:layout_marginTop="40dp"
                    android:text="오늘플랜은 클라우드/모바일 기술을 선도하는 IT 전문 기업으로, 최고의 기술을 통해 고객에게 새로운 가치를 제공합니다."
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@+id/fcompanyinfo_guideline05"
                    app:layout_constraintRight_toRightOf="@+id/fcompanyinfo_guideline90"
                    app:layout_constraintTop_toBottomOf="@+id/imageview01" />

                <ImageView
                    android:id="@+id/imageview02"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/info2"
                    app:layout_constraintLeft_toLeftOf="@+id/fcompanyinfo_guideline05"
                    app:layout_constraintRight_toRightOf="@+id/fcompanyinfo_guideline90"
                    app:layout_constraintTop_toBottomOf="@+id/textview3" />

                <TextView
                    android:id="@+id/textview4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageview02"
                    android:layout_marginTop="40dp"
                    android:text="세무법인, 회계법인, 법무법인이 협업시스템을 갖추고 ‘원 펌-원 스톱’ 서비스를 제공하는 대표세무법인 오늘 T.A.C가 출자한 IT 전문 기업으로 온라인 및 모바일 마케팅에 최적화된 홈페이지 및 어플리케이션, 인트라넷 등의 구축부터 마케팅까지 다양한 서비스를 제공하기 위해 설립된 회사입니다."
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@+id/fcompanyinfo_guideline05"
                    app:layout_constraintRight_toRightOf="@+id/fcompanyinfo_guideline90"
                    app:layout_constraintTop_toBottomOf="@+id/imageview02" />

                <ImageView
                    android:id="@+id/imageview03"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/info3"
                    app:layout_constraintLeft_toLeftOf="@+id/fcompanyinfo_guideline05"
                    app:layout_constraintRight_toRightOf="@+id/fcompanyinfo_guideline90"
                    app:layout_constraintTop_toBottomOf="@+id/textview4" />

                <TextView
                    android:id="@+id/textview5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageview03"
                    android:layout_marginTop="40dp"
                    android:text="오늘플랜은 혁신적인 IT 기술력을 기반으로 다양한 비즈니스 영역에서 고객사가 핵심역량에 집중하여 기업가치와 경쟁력을 제고 할 수 있도록 가장 빠르고 전문적인 통찰력을 제공하여 드립니다."
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@+id/fcompanyinfo_guideline05"
                    app:layout_constraintRight_toRightOf="@+id/fcompanyinfo_guideline90"
                    app:layout_constraintTop_toBottomOf="@+id/imageview03" />

                <TextView
                    android:id="@+id/textview6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="30dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/fcompanyinfo_guideline05"
                    app:layout_constraintEnd_toEndOf="@+id/fcompanyinfo_guideline90"
                    app:layout_constraintTop_toBottomOf="@+id/textview5"
                    android:text="(주)오늘플랜\n대표 : 정기동\n사업자번호 : 291-88-01054\n서울특별시 강남구 봉은사로 326 남전빌딩 8층\n고객지원 : 1234-1234(평일 : 09:30~18:30)\n2018 all right reserved" />


            </android.support.constraint.ConstraintLayout>

        </ScrollView>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"

        app:menu="@menu/drawer" />
</android.support.v4.widget.DrawerLayout>