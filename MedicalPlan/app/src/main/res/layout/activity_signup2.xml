<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp.SignUpActivity2">

    <android.support.constraint.Guideline
        android:id="@+id/signup_guideline_h_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <android.support.constraint.Guideline
        android:id="@+id/signup_guideline_h_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <android.support.constraint.Guideline
        android:id="@+id/signup_guideline_h_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:id="@+id/signup_guideline_h_40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <android.support.constraint.Guideline
        android:id="@+id/signup_guideline_h_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <android.support.constraint.Guideline
        android:id="@+id/signup_guideline_h_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <android.support.constraint.Guideline
        android:id="@+id/signup_guideline_h_90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90" />

    <android.support.constraint.Guideline
        android:id="@+id/signup_guideline_h_98"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.98" />

    <android.support.constraint.Guideline
        android:id="@+id/signup_guideline_v_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/signup_guideline_v_90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <ImageView
        android:id="@+id/image_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@drawable/cancel"
        app:layout_constraintBottom_toBottomOf="@+id/signup_guideline_h_8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:text="회원가입"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/signup_guideline_h_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/signup_guideline_h_8" />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="닉네임"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/signup_guideline_v_10"
        app:layout_constraintTop_toTopOf="@+id/signup_guideline_h_15" />

    <EditText
        android:id="@+id/nickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="닉네임을 입력하세요."
        app:layout_constraintLeft_toLeftOf="@+id/signup_guideline_v_10"
        app:layout_constraintRight_toRightOf="@+id/signup_guideline_v_90"
        app:layout_constraintTop_toBottomOf="@+id/tv_nickname" />

    <TextView
        android:id="@+id/tv_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="성별"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/signup_guideline_v_10"
        app:layout_constraintTop_toTopOf="@+id/signup_guideline_h_30" />

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/signup_guideline_v_10"
        app:layout_constraintTop_toBottomOf="@+id/tv_sex">

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_men"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남자"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/radio_women"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여자"
                android:layout_weight="1"/>

        </RadioGroup>

    </TableRow>

    <!--<CheckBox-->
    <!--android:id="@+id/checkBox_men"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="남자"-->
    <!--app:layout_constraintTop_toBottomOf="@+id/tv_sex"-->
    <!--app:layout_constraintLeft_toLeftOf="@+id/signup_guideline_v_10"/>-->
    <!--<CheckBox-->
    <!--android:id="@+id/checkBox_women"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="여자"-->
    <!--android:layout_marginLeft="5dp"-->
    <!--app:layout_constraintTop_toBottomOf="@+id/tv_sex"-->
    <!--app:layout_constraintLeft_toRightOf="@+id/checkBox_men"/>-->

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="나이"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/signup_guideline_v_10"
        app:layout_constraintTop_toTopOf="@+id/signup_guideline_h_40" />

    <Button
        android:id="@+id/year_choice_btn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/button_normal"
        android:gravity="center"
        android:text="선택"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/signup_guideline_v_10"
        app:layout_constraintRight_toRightOf="@+id/signup_guideline_v_90"
        app:layout_constraintTop_toBottomOf="@+id/tv_age" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="휴대폰 번호"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/signup_guideline_v_10"
        app:layout_constraintTop_toTopOf="@+id/signup_guideline_h_50" />

    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/button_signup"
        android:text="인증받기"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/signup_guideline_v_10"
        app:layout_constraintTop_toBottomOf="@+id/tv_number" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="이용자 동의"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/signup_guideline_v_10"
        app:layout_constraintTop_toTopOf="@+id/signup_guideline_h_60" />

    <CheckBox
        android:id="@+id/checkBox_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체동의"
        app:layout_constraintLeft_toLeftOf="@+id/signup_guideline_v_10"
        app:layout_constraintTop_toBottomOf="@+id/tv1" />

    <CheckBox
        android:id="@+id/checkBox_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(필수) 이용약관"
        app:layout_constraintLeft_toLeftOf="@+id/signup_guideline_v_10"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_1" />

    <CheckBox
        android:id="@+id/checkBox_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(필수) 개인정보 수집, 이용"
        app:layout_constraintLeft_toLeftOf="@+id/signup_guideline_v_10"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_2" />

    <CheckBox
        android:id="@+id/checkBox_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(필수) 개인정보 처리위탁"
        app:layout_constraintLeft_toLeftOf="@+id/signup_guideline_v_10"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_3" />

    <CheckBox
        android:id="@+id/checkBox_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(필수) 선택 이벤트 알림 수신"
        app:layout_constraintLeft_toLeftOf="@+id/signup_guideline_v_10"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_4" />

    <CheckBox
        android:id="@+id/checkBox_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="푸시 알림"
        app:layout_constraintLeft_toLeftOf="@+id/signup_guideline_v_10"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_5" />

    <CheckBox
        android:id="@+id/checkBox_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="SMS"
        app:layout_constraintLeft_toRightOf="@+id/checkBox_6"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_5" />

    <CheckBox
        android:id="@+id/checkBox_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="이메일"
        app:layout_constraintLeft_toRightOf="@+id/checkBox_7"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_5" />

    <Button
        android:id="@+id/next_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/button_click"
        android:text="완료"
        android:textColor="#479DFF"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/signup_guideline_h_98"
        app:layout_constraintLeft_toLeftOf="@+id/signup_guideline_v_10"
        app:layout_constraintRight_toRightOf="@+id/signup_guideline_v_90"
        app:layout_constraintTop_toTopOf="@+id/signup_guideline_h_90" />


</android.support.constraint.ConstraintLayout>