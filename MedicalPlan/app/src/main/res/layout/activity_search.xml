<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.Guideline
            android:id="@+id/main_guideline_v_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15" />

        <android.support.constraint.Guideline
            android:id="@+id/main_guideline_v_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.60" />

        <android.support.constraint.Guideline
            android:id="@+id/main_guideline_v_80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />

        <android.support.constraint.Guideline
            android:id="@+id/main_guideline_h_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <android.support.constraint.Guideline
            android:id="@+id/main_guideline_h_90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />

        <ImageView
            android:id="@+id/image_cancel"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/left"
            app:layout_constraintBottom_toBottomOf="@+id/main_guideline_h_90"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/main_guideline_v_15"
            app:layout_constraintTop_toTopOf="@+id/main_guideline_h_10" />

        <!--<TextView-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="0dp"-->
        <!--android:gravity="center"-->
        <!--android:text="앱로고"-->
        <!--app:layout_constraintBottom_toBottomOf="@+id/main_guideline_h_90"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintRight_toRightOf="@+id/main_guideline_v_15"-->
        <!--app:layout_constraintTop_toTopOf="@+id/main_guideline_h_10" />-->

        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:text="병의원 잦기"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/main_guideline_h_90"
            app:layout_constraintLeft_toLeftOf="@+id/main_guideline_v_15"
            app:layout_constraintRight_toRightOf="@+id/main_guideline_v_60"
            app:layout_constraintTop_toTopOf="@+id/main_guideline_h_10" />

        <!--<ImageView-->
        <!--android:id="@+id/userinfo_image_btn"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_marginLeft="5dp"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:layout_marginRight="5dp"-->
        <!--android:layout_marginBottom="5dp"-->
        <!--android:foregroundGravity="center"-->
        <!--android:src="@drawable/user"-->
        <!--app:layout_constraintBottom_toBottomOf="@+id/main_guideline_h_90"-->
        <!--app:layout_constraintLeft_toLeftOf="@+id/main_guideline_v_60"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="@+id/main_guideline_h_10" />main_guideline_v_80-->

        <Button
            android:id="@+id/button_hospital"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_on"
            android:text="병원"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/main_guideline_h_90"
            app:layout_constraintLeft_toLeftOf="@+id/main_guideline_v_60"
            app:layout_constraintRight_toRightOf="@+id/main_guideline_v_80"
            app:layout_constraintTop_toTopOf="@+id/main_guideline_h_10" />

        <Button
            android:id="@+id/button_pharmacy"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_off"
            android:text="약국"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/main_guideline_h_90"
            app:layout_constraintLeft_toLeftOf="@+id/main_guideline_v_80"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/main_guideline_h_10" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@+id/constraint1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <android.support.constraint.Guideline
            android:id="@+id/search_guideline_v_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.85" />

        <android.support.constraint.Guideline
            android:id="@+id/search_guideline_h_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <android.support.constraint.Guideline
            android:id="@+id/search_guideline_h_90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />

        <EditText
            android:id="@+id/edittext"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:hint="병원 또는 약국명을 입력해주세요."
            android:textColor="#808080"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/search_guideline_v_60"
            app:layout_constraintTop_toTopOf="@+id/search_guideline_h_10" />

        <ImageView
            android:id="@+id/search_image_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:foregroundGravity="center"
            android:src="@drawable/search_pin"
            app:layout_constraintBottom_toBottomOf="@+id/search_guideline_h_90"
            app:layout_constraintLeft_toLeftOf="@+id/search_guideline_v_60"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/search_guideline_h_10" />

    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint2" />

</android.support.constraint.ConstraintLayout>