<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.LoginActivity">

    <android.support.constraint.Guideline
        android:id="@+id/login_guideline_h_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/login_guideline_v_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/login_guideline_h_50"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"
            tools:ignore="MissingConstraints" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/login_guideline_h_50"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.support.constraint.Guideline
            android:id="@+id/login_guideline_h_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />

        <android.support.constraint.Guideline
            android:id="@+id/login_guideline_h_35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35" />

        <android.support.constraint.Guideline
            android:id="@+id/login_guideline_h__50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.50" />

        <android.support.constraint.Guideline
            android:id="@+id/login_guideline_h_80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.80" />

        <android.support.constraint.Guideline
            android:id="@+id/login_guideline_v_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />

        <android.support.constraint.Guideline
            android:id="@+id/login_guideline_v_66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />

        <ImageView
            android:id="@+id/kakao_login_btn"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:src="@drawable/kakao_login"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/login_guideline_h_20" />

        <ImageView
            android:id="@+id/naver_login_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/naver_login"
            app:layout_constraintLeft_toLeftOf="@+id/kakao_login_btn"
            app:layout_constraintRight_toRightOf="@+id/kakao_login_btn"
            app:layout_constraintTop_toBottomOf="@+id/kakao_login_btn" />

        <!--<com.nhn.android.naverlogin.ui.view.OAuthLoginButton-->
            <!--android:id="@+id/buttonOAuthLoginImg"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="60dp"-->
            <!--app:layout_constraintLeft_toLeftOf="@+id/kakao_login_btn"-->
            <!--app:layout_constraintRight_toRightOf="@+id/kakao_login_btn"-->
            <!--app:layout_constraintTop_toBottomOf="@+id/kakao_login_btn"/>-->


        <TextView
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="회원가입"
            app:layout_constraintBottom_toBottomOf="@+id/login_guideline_h_80"
            app:layout_constraintLeft_toLeftOf="@+id/login_guideline_v_25"
            app:layout_constraintRight_toRightOf="@+id/login_guideline_v_25"
            app:layout_constraintTop_toTopOf="@+id/login_guideline_h_80" />

        <TextView
            android:id="@+id/findid"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="아이디 찾기"
            app:layout_constraintBottom_toBottomOf="@+id/login_guideline_h_80"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/login_guideline_h_80" />

        <TextView
            android:id="@+id/findpw"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="비밀번호 찾기"
            app:layout_constraintBottom_toBottomOf="@+id/login_guideline_h_80"
            app:layout_constraintLeft_toLeftOf="@+id/login_guideline_v_66"
            app:layout_constraintRight_toRightOf="@+id/login_guideline_v_66"
            app:layout_constraintTop_toTopOf="@+id/login_guideline_h_80" />

        <TextView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginBottom="20dp"
            android:text="다음화면Test용"
            app:layout_constraintBottom_toTopOf="@+id/findid"
            app:layout_constraintEnd_toEndOf="@+id/findid"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="@+id/findid" />

        <!--<Button-->
        <!--android:id="@+id/button"-->
        <!--android:layout_width="90dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:background="@drawable/buttonshape"-->
        <!--android:text="이메일로 로그인"-->
        <!--android:textColor="#479DFF"-->
        <!--android:textSize="15dp"-->

        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent" />-->

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>